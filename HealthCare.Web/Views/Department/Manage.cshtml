
@using System
@model IList<HealthCare.Web.Models.Department.DepartmentViewModel>
@using HealthCare.Web.Models.Modal

<div class="row">
    <div class="col-md-12">
        <!-- BEGIN EXAMPLE TABLE PORTLET-->
        <div class="portlet light bordered">
            <div class="portlet-body">
                <div class="table-toolbar">
                    <div class="row">
                        <div class="col-md-6">
                            <div class="btn-group">
                                <a id="addEditDepartmentModal" data-toggle="modal" asp-action="CreateEdit" asp-route-id="0" data-target="#modal-action-addedit-department" class="btn sbold green">
                                    <i class="fa fa-plus"></i>  Add New
                                </a>
                            </div>
                        </div>
                    </div>
                </div>

                @if (Model.Count() > 0)
                {
                    <table class="table table-striped table-bordered table-hover table-checkable order-column" id="sample_1">
                        <thead>
                            <tr>
                                <th>
                                    <input type="checkbox" class="group-checkable" data-set="#sample_1 .checkboxes" />
                                </th>
                                <th> Department Name </th>
                                <th> Number of Doctors </th>
                                <th> Edit </th>
                                <th> Delete </th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var department in Model.ToList())
                            {

                                <tr class="odd gradeX">
                                    <td><input type="checkbox" class="checkboxes" value="1" /></td>
                                    <td> @department.Name </td>
                                    <td> @department.NumberOfDoctors </td>
                                    <td>
                                        <a id="addEditDepartmentModal" data-toggle="modal" asp-action="CreateEdit" asp-route-id="@department.Id" data-target="#modal-action-addedit-department" class="btn sbold green">
                                            <i class="fa fa-edit"></i>  Edit
                                        </a>
                                    </td>
                                    <td>
                                        <a id="deleteDepartmentModal" data-toggle="modal" asp-action="Delete" asp-route-id="@department.Id" data-target="#modal-action-delete-department" class="btn btn-danger">
                                            <i class="glyphicon glyphicon-trash"></i>  Delete
                                        </a>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                }
            </div>
        </div>
    </div>
</div>

@Html.Partial("_Modal", new BootstrapModel { ID = "modal-action-delete-department", AreaLabeledId = "modal-action-delete-department-label", Size = ModalSize.Small })
@Html.Partial("_Modal", new BootstrapModel { ID = "modal-action-addedit-department", AreaLabeledId = "modal-action-addedit-department-label", Size = ModalSize.Small })
@section scripts
{
    <script src="~/js/department-manage.js" asp-append-version="true"></script>
}
