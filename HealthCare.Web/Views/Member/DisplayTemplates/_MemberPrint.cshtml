@model HealthCare.Data.Models.Member;

<table>
    <tbody>
        @Html.Partial("_ReportHeader", new HealthCare.Web.Models.Report.ReportHeader { Heading = "ভর্তি ফরম", ImageName = @Model.ImageName })

        <tr>
            @if (@Model.Category == "AdvisoryCouncil")
            {
                <td colspan="3" style="font-weight:bold"> উপদেষ্টা নং - @Model.RegNo</td>
            }
            else if (@Model.Category == "ExecutiveCouncil")
            {
                <td colspan="3" style="font-weight:bold"> কার্যনির্বাহী নং - @Model.RegNo</td>
            }
            else
            {
                <td colspan="3" style="font-weight:bold"> সদস্য নং - @Model.RegNo</td>
            }
        </tr>
    </tbody>
</table>
<br />
<table style="font-size:small">
    <tr>
        @if (@Model.Category == "AdvisoryCouncil")
        {
            <td class="remove-border"> উপদেষ্টার নাম </td>
        }
        else if (@Model.Category == "ExecutiveCouncil")
        {
            <td class="remove-border"> কার্যনির্বাহীর নাম </td>
        }
        else
        {
            <td class="remove-border"> সদস্যের নাম </td>
        }
        <td class="remove-border">:</td>
        <td class="remove-border">@Model.Name</td>
        <td class="remove-border"></td>
        <td class="remove-border"></td>
        <td class="remove-border"> পেশা </td>
        <td class="remove-border">: </td>
        <td class="remove-border">@Model.Profession</td>
    </tr>
    <tr>
        <td class="remove-border"> পিতা/স্বামীর নাম </td>
        <td class="remove-border">:</td>
        <td class="remove-border">@Model.FatherName</td>
        <td class="remove-border"></td>
        <td class="remove-border"></td>
        <td class="remove-border"> মাতার নাম </td>
        <td class="remove-border">: </td>
        <td class="remove-border">@Model.MotherName</td>
    </tr>
    <tr>
        <td class="remove-border"> ঠিকানা </td>
        <td class="remove-border">:</td>
        <td class="remove-border">@Model.Address</td>
        <td class="remove-border"></td>
        <td class="remove-border"></td>
        <td class="remove-border"> মোবাইল নং  </td>
        <td class="remove-border">: </td>
        <td class="remove-border">@Model.MobileNumber</td>
    </tr>
    <tr>
        <td class="remove-border"> জন্ম তারিখ </td>
        <td class="remove-border">: </td>
        <td class="remove-border">@Model.DateOfBirthString</td>
        <td class="remove-border"></td>
        <td class="remove-border"></td>
        <td class="remove-border">বয়স  </td>
        <td class="remove-border">:</td>
        <td class="remove-border">@Model.Age</td>

    </tr>
    <tr>
        <td class="remove-border"> লিঙ্গ </td>
        <td class="remove-border">: </td>
        <td class="remove-border">@Model.Gender</td>

        <td class="remove-border"></td>
        <td class="remove-border"></td>

        <td class="remove-border">রক্তের গ্রুপ </td>
        <td class="remove-border">:</td>
        <td class="remove-border">@Model.BloodGroupString</td>


    </tr>
    <tr>
        <td class="remove-border"> সদস্যের শ্রেণি </td>
        <td class="remove-border">:</td>
        <td class="remove-border">@Model.CategoryString</td>
        <td class="remove-border"></td>
        <td class="remove-border"></td>
        <td class="remove-border"> পদমর্যাদা </td>
        <td class="remove-border">: </td>
        <td class="remove-border">@Model.DesignationString</td>
    </tr>
    <tr>
        <td class="remove-border"> জাতীয়তা </td>
        <td class="remove-border">: </td>
        <td class="remove-border">@Model.Nationality</td>
        <td class="remove-border"></td>
        <td class="remove-border"></td>

        <td class="remove-border">ধর্ম  </td>
        <td class="remove-border">:</td>
        <td class="remove-border">@Model.Religion</td>
    </tr>
    <tr>
        <td class="remove-border"> জাতীয় পরিচয়পত্র নং </td>
        <td class="remove-border">: </td>
        <td class="remove-border">@Model.NationalIdNo</td>

        <td class="remove-border"></td>
        <td class="remove-border"></td>

        <td class="remove-border">পাসপোর্ট নং  </td>
        <td class="remove-border">:</td>
        <td class="remove-border">@Model.PassportNo</td>

    </tr>
    <tr>
        <td class="remove-border"> নমিনি নাম </td>
        <td class="remove-border">: </td>
        <td class="remove-border">@Model.NomineeName</td>

        <td class="remove-border"></td>
        <td class="remove-border"></td>

        <td class="remove-border">নমিনি সম্পর্ক  </td>
        <td class="remove-border">:</td>
        <td class="remove-border">@Model.NomineeRelation</td>

    </tr>
    <tr>
        <td class="remove-border"> নমিনি এন,আই,ডি </td>
        <td class="remove-border">: </td>
        <td class="remove-border">@Model.NomineeNationalIdNo</td>

        <td class="remove-border"></td>
        <td class="remove-border"></td>

        <td class="remove-border">নমিনি বয়স  </td>
        <td class="remove-border">:</td>
        <td class="remove-border">@Model.NomineeAge</td>

    </tr>
</table>
<br />
<br />
<br />
<table>
    <tbody>
        <tr>
            <td colspan="2" style="text-align:center; font-weight:bold;">অঙ্গীকার নামা</td>
        </tr>
        <tr style="font-size:small">
            <td colspan="2">
                আমি <span style="font-weight:bold;"> @Model.Name </span> এই মর্মে স্বেচ্ছায়, স্বজ্ঞানে ও সুস্থ মস্তিস্কে স্বীকার করছি যে, আমার দেওয়া উপরোল্লিখিত সকল তথ্য সত্য এবং নির্ভুল। এছাড়া আরো
                অঙ্গীকার করছি যে, আমি অত্র সংগঠনের কার্যকরী কমিটির সকল সিদ্ধান্ত মানিয়া চলিব, আমি অত্র সংগঠনের সংবিধান বহির্ভূত কোন কাজ করিব না। সংবিধান বহির্ভূত কোন কাজে লিপ্ত থাকিলে বা প্রমান পাওয়া গেলে আমার সদস্যপদ
                বাতিল বলিয়া গণ্য হইবে, ইহাতে আমার কোন আপত্তি থাকিবে না।
            </td>
        </tr>
        @Html.Partial("_ReportFooter")
    </tbody>
</table>
<link href="~/css/report.css" rel="stylesheet" />
